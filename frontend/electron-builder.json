{
  "appId": "com.assistente.ai",
  "productName": "Assistente IA",
  "directories": {
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "public/electron.js",
    "public/preload.js",
    "node_modules/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": "dmg"
  },
  "win": {
    "target": "nsis",
    "icon": "public/icon.ico"
  },
  "linux": {
    "target": "AppImage"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
